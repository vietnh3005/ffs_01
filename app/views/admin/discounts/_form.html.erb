<%= form_for [:admin, @discount] do |f| %>
  <%= f.hidden_field :status, value: "active" %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :title, t(".title"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :description, t(".description"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :value, t(".value"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :dis_value, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :start, t(".start"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.date_field :date_start, class: "form-control",
            data: {provide: :datepicker, date_format: "yyyy/mm/dd"} %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :end, t(".end"), class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.date_field :date_end, class: "form-control",
            data: {provide: :datepicker, date_format: "yyyy/mm/dd"} %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <%= f.submit t(".create"), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
